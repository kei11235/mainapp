<%# <%= render "shared/second-header"%> 
<div class="hony-field">
  <%= image_tag("honey-back.jpg", class:"honey-back") %>
  <div class="sign-field">
    <div class="BeeYourBest-icon">
      <%= link_to image_tag("BeeYourBest_背景透明.png", class:"BeeYourBestBee-icon"), "/" %>
    </div>
    <div class="registration">
      新規登録
    </div>

    <%= form_with url: "#", class: 'registration-main', local: true do |f| %>
    <div class='form-wrap'>
      <%# <%= render 'shared/error_messages', model: f.object %>
      <div class="form-top">

        <div class="form-left">
          <div class="form-group">
            <div class='form-text-wrap'>
              <label class="form-text">ニックネーム</label>
              <span class="indispensable">必須</span>
            </div>
            <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) オオスズメバチ", maxlength:"20", autofocus: true %>
          </div>
          <div class="form-group">
            <div class='form-text-wrap'>
              <label class="form-text">メールアドレス</label>
              <span class="indispensable">必須</span>
            </div>
            <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可" %>
          </div>
          <div class="form-group">
            <div class='form-text-wrap'>
              <label class="form-text">パスワード</label>
              <span class="indispensable">必須</span>
            </div>
            <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
            <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
          </div>
          <div class="form-group">
            <div class='form-text-wrap'>
              <label class="form-text">パスワード(確認)</label>
              <span class="indispensable">必須</span>
            </div>
            <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
          </div>
        </div>

        <div class="form-middle">
          <div class="form-group">
            <div class='form-text-wrap'>
              <label class="form-text">年齢</label>
              <span class="indispensable">必須</span>
            </div>
            <%= f.collection_select(:age_id, Age.all, :id, :name, {}, {class:"select-box", id:"user-age"}) %>
          </div>
          <div class="form-group">
            <div class='form-text-wrap'>
              <label class="form-text">性別</label>
              <span class="indispensable">必須</span>
            </div>
            <%= f.collection_select(:sex_id, Sex.all, :id, :name, {}, {class:"select-box", id:"user-sex"}) %>
          </div>
          <div class="form-group">
            <div class='form-text-wrap'>
              <label class="form-text">職業</label>
              <span class="indispensable">必須</span>
            </div>
            <%= f.collection_select(:profession_id, Profession.all, :id, :name, {}, {class:"select-box", id:"user-profession"}) %>
          </div>
        </div>

        <div class="form-right">
          <div class="form-group">
            <div class='form-text-wrap'>
              <label class="form-text">アイコン</label>
              <span class="indispensable">任意</span>
            </div>
            <div class="click-upload">
              <p>
                クリックしてファイルをアップロード
              </p>
              <div id="image-list"></div>
              <%= f.file_field :image, id:"item-image" %>
            </div>
          </div>
          <div class="form-group">
            <div class='form-text-wrap'>
              <label class="form-text">がんばりたいこと！</label>
              <span class="indispensable">任意</span>
            </div>
            <%= f.text_area :explain, class:"form-explanation", id:"form-text", placeholder:"今、頑張りたいこと！（任意 200文字まで）　最近プログラミング言語を学び始めました。ちょうど昨日からJavaScriptの勉強を始めたので頑張っていきたいです！" ,rows:"7" ,maxlength:"200" %>
          </div>
        </div>

      </div>
      <div class="form-bottom">
        <div class="btn btn-border-shadow btn-border-shadow--radius">
          <%= f.submit "新規登録！", class:"form-submit" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
<%# <%= render "shared/second-footer"%>
