<% if user_signed_in? %>
    <% if goal.liked_by?(current_user) %>
        <p><span>お気に入り解除: </span><%=link_to goal.likes.count, goal_like_path(goal.id, current_user.id), method: :delete, remote: true %></p>
    <% else %>
        <p><span>お気に入り登録: </span><%=link_to goal.likes.count, goal_likes_path(goal.id,), method: :post, remote: true %></p>
    <% end %>
<% else %>
    <p><span>お気に入り数: </span><%= goal.likes.count %></p>
<% end %>