<div class="hony-field">
  <%= image_tag("honey-back.jpg", class:"honey-back") %>
  <div class="sign-field">
    <div class="BeeYourBest-icon">
      <%= link_to image_tag("BeeYourBest_背景透明.png", class:"BeeYourBestBee-icon"), "/" %>
    </div>
    <div class="registration">
      タスクの移動
    </div>

    <div class="registration-main">
      <div class='form-wrap5'>

        <%= form_with(model: [@goal, @task], url: goal_completions_path(params[:goal_id]), method: :post, id: "form", local: true) do |f| %>
          <div class="task-form">
            <div class="form-group5">
              <div class='form-text-wrap'>
                <label class="form-text">
                  <p>・必要に応じて新しいタスクを作ろう！</p>
                </label>
              </div>
              <%= f.text_field :content, class:"input-default", id:"content", placeholder:"新しいタスクを入力する", maxlength:"30", autofocus: true %>
            </div>
            <%= f.submit '作成',class: "task-submit", id: "task-submit" %>
          </div>
        <% end %>

        <div class="form-top5">

          <div class="form-left5">
            <div class="task-field">
              <div class="task-main-todo">
                やることリスト！
              </div>
              <% @tasks.each do |t| %>
                <div class="task-content">
                  <%= t.content %>
                
                  <div class="task-delete">
                    <%= link_to "移動",  goal_completion_path(params[:goal_id], t.id), method: :get, class: "task-submit" %>
                    <%= link_to "削除", goal_completion_path(params[:goal_id], t.id), method: :delete, class: "task-submit" %>
                  </div>
                </div>
              <% end %>
              <div id="list">
              </div>
            </div>
          </div>

          <div class="form-middle5">
            <div class="task-field">
              <div class="task-main-todo">
                完了したこと
              </div>
              <% @completion.each do |t| %>
                <div class="task-content">
                  <%= t.content %>
                  <div class="task-delete">
                    <%= link_to "削除", edit_goal_completion_path(params[:goal_id], t.id), method: :get, class: "task-submit" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>

          <div class="form-right5">
            <div class="bou2">
              <% num = (@completion.count / (@tasks.count + @completion.count + 0.0001)) * 100 %>
              <% numpx = "#{400 * (1 - @completion.count / (@tasks.count + @completion.count + 0.0001))}px" %>
              <style>
                .bou2 {
                  height: <%= numpx %>;
                }
              </style>
            </div>
            <%= image_tag "rainbow.jpg", class:"bou" %>
            <div class="achievement">
              達成率
              <span>
                <%= num.ceil(1) %>
              </span>
              %
            </div>
          </div>

        </div>

        <div class="form-bottom5">
          <%= link_to 'トップページに戻る', "/", class:"btn btn-border-shadow btn-border-shadow--radius" %>
        </div>

      </div>
    </div>
  </div>
</div>